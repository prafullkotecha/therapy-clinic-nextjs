# Database Configuration
# Local: Start PostgreSQL with `docker-compose up -d`
# Production: Use AWS RDS PostgreSQL with Multi-AZ, encryption at rest
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/therapy_clinic_dev

# Keycloak Authentication
# Self-hosted for HIPAA compliance
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=therapy-clinic
KEYCLOAK_CLIENT_ID=therapy-clinic-app
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# NextAuth.js Configuration
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# PHI Encryption Configuration
# REQUIRED: 256-bit encryption key for PHI fields
# Generate with: openssl rand -hex 32
# CRITICAL: Keep this secret and never commit to version control
PHI_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Optional: Key identifier for rotation (change when rotating keys)
PHI_ENCRYPTION_KEY_ID=dev-key-1

# AWS Configuration (for production - future use)
AWS_REGION=us-east-1

# SendGrid (email notifications - with BAA for HIPAA)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@therapyclinic.com

# Twilio (SMS reminders - with BAA for HIPAA)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (session management and caching)
# Local: docker-compose or Redis Stack
# Production: AWS ElastiCache Redis
REDIS_URL=redis://localhost:6379

# Sentry (error monitoring - with BAA for HIPAA)
SENTRY_DSN=your_sentry_dsn

# Arcjet (WAF and bot detection)
ARCJET_KEY=your_arcjet_key

# PostHog (analytics - optional, ensure BAA if tracking PHI)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Next.js
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development
